# Nudges Master Environment Configuration
# This file is the single source of truth for all environment configurations
# Edit values here and run ./initialize-env.ps1 to regenerate all config files

# Database Credentials
DB_PASSWORD=your_db_password_here

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_admin_password_here

# API Keys
API_KEY=your_api_key_here
AUTH_API_KEY=your_auth_api_key_here
MONITOR_API_KEY=your_graph_monitor_api_key_here

# Stripe Configuration
STRIPE_API_URL=http://payment-processor-proxy:4243

GRAPHQL_API_URL=http://host.docker.internal:5900/graphql

# OIDC Credentials
OIDC_ADMIN_USERNAME=admin
OIDC_ADMIN_PASSWORD=your_oidc_password_here

CACHE_SERVER_ADDRESS=http://warp-cache:7777

Oidc__Realm=nudges
Oidc__ServerUrl=url_here
OIDC_SERVER_AUTH_URL=url_here
Oidc__AdminCredentials__AdminClientId=admin-cli
Oidc__AdminCredentials__Username=admin
Oidc__AdminCredentials__Password=password_here

IGNORE_SSL_CERT_VALIDATION=true

ConnectionStrings__UserDb=Host=postgres;Port=5432;Database=userdb;Username=userdb;Password={{USERDB_PASSWORD}};
ConnectionStrings__ProductDb=Host=postgres;Port=5432;Database=productdb;Username=productdb;Password={{PRODUCTDB_PASSWORD}};
ConnectionStrings__PaymentDb=Host=postgres;Port=5432;Database=paymentdb;Username=paymentdb;Password={{PAYMENTDB_PASSWORD}};

Authentication__Schemes__Bearer__RequireHttpsMetadata=true
Authentication__Schemes__Bearer__Authority=https://keycloak.local:8443/realms/nudges
Authentication__Schemes__Bearer__TokenValidationParameters__ValidIssuer=url_here
Authentication__Schemes__Bearer__TokenValidationParameters__ValidateAudience=false
IdentityModel__Logging=true

LOCALIZATION_API_URL=http://localizer-api:8888

HashSettings__HashKeyBase64=your_base64_hash_key_here
EncryptionSettings__Key=your_base64_encryption_key_here
